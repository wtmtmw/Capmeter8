{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc.exe build DLL from active file",
			"command": "C:\\Users\\wangt43\\mingw64\\bin\\gcc.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-shared",
				"-fPIC",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.dll"
