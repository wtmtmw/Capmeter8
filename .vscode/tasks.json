                "${fileDirname}\\Capmeter8.py"
            ],
			"options": {
                "env": {
                    "PATH": "C:\\Users\\wangt43\\AppData\\Local\\Programs\\Python\\Python313;C:\\Users\\wangt43\\AppData\\Local\\Programs\\Python\\Python313\\Scripts;${env:PATH}"
